#version 330 core

layout(location = 0) out vec3 position; // X Y Z MaterialType
layout(location = 1) out vec3 normal;	// X Y Z AO
layout(location = 2) out vec3 color; // R G B Metalness

uniform sampler2D tex;

in vec2 TexCoord0;
in vec3 Position;
in vec3 Normal;
in vec3 Tangent;

void main() {
  position = Position;
  normal = Normal;
  color = texture2D(tex, TexCoord0).rgb;
}