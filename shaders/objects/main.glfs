#version 330 core

out vec3 color;

uniform sampler2D tex;

in vec2 TexCoord0;
in vec3 Position;
in vec3 Normal;
in vec3 Tangent;

void main() {
  vec3 LightPos = vec3(0,1,0);
  vec3 LightDir = LightPos-Position;
  float Distance = length(LightDir);
  LightDir = normalize(LightDir);
  float lum =  max(dot(Normal,LightDir), 0) / Distance;
  color = lum * texture2D(tex, TexCoord0).rgb;
}