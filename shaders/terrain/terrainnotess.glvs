#version 140

in vec3 vertexPos;
in vec2 texCoord;
in vec3 vertexNormals;
in vec3 vertexTangents;

uniform mat4 gWorld;
uniform mat4 gVP;

out vec3 WorldPos_FS;
out vec2 TexCoord0_FS;
out vec3 Normal_FS;
out vec3 Tangent_FS;

void main() {
    WorldPos_FS = vec4(gWorld * vec4(vertexPos, 1.0)).xyz;
    gl_Position = gVP * gWorld * vec4(vertexPos, 1.0);
    TexCoord0_FS = vec2(-texCoord.x, -texCoord.y);
    Normal_FS = vertexNormals;
    Tangent_FS = vertexTangents;
}